<div id="main-box">
  <div class="left-side">
    <h1>Log in</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "email", autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "password", autocomplete: "current-password" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="actions">
        <%= f.submit "Log in", class: "submit"%>
      </div>
    <% end %>
    <br />
    <%= link_to "Forgot password?",  new_password_path(resource_name) %>
    
  </div>
  <div class="right-side">
    <span class="login-with"><h1>Not a member?</h1>
    <%= button_to "Sign Up", new_user_registration_path, method: :get, class: "social-button evie" %>
    </span>
    <hr>
    <span class="login-with"><h1>Log in with</h1> 
    <%= button_to "Log in with Google", user_google_oauth2_omniauth_authorize_path, method: :get, class: "social-button google"%>
    </span>
  </div>
</div>