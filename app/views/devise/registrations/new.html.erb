<div id="main-box">
  <div class="left-side">
    <h1>Sign up</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.email_field :email, class: 'email', placeholder:'Email address', autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class: 'password', placeholder:'Password',  autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, class: 'password', placeholder: 'Password Confirmation', autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "submit"%>
      </div>
      <h6><%= render "devise/shared/error_messages", resource: resource %></h6>
    <% end %>
    
  </div>
  <div class="right-side">
    <span class="login-with"><h1>Already a member?</h1>
    <%= button_to "Login", new_user_session_path, class: "social-button evie" %>
    </span>
    <hr>
    <span class="login-with"><h1>Sign in with</h1> 
    <%= button_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, class: "social-button google"%>
    </span>
  </div>
</div>
